@model List<EventManagementSystem.Models.Event>

@{
    ViewData["Title"] = "Archived Events";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Archived Events</h1>
            <p class="text-muted">@Model.Count archived events</p>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Title</th>
                        <th>Organizer</th>
                        <th>Original Date</th>
                        <th>Archived At</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var @event in Model)
                    {
                        <tr>
                            <td>
                                <strong>@event.Title</strong><br>
                                <small class="text-muted">@event.Location</small>
                            </td>
                            <td>
                                @event.CreatedBy?.FirstName @event.CreatedBy?.LastName
                            </td>
                            <td>
                                @event.StartDate.ToString("MMM dd, yyyy")
                            </td>
                            <td>
                                @event.ArchivedAt?.ToString("MMM dd, yyyy HH:mm")
                            </td>
                            <td>
                                <span class="badge bg-secondary">@event.Status</span>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", "Event", new { id = @event.Id })" class="btn btn-sm btn-outline-primary">View</a>
                                <button class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#restoreModal@(@event.Id)">
                                    Restore
                                </button>
                            </td>
                        </tr>

                        <!-- Restore Modal -->
                        <div class="modal fade" id="restoreModal@(@event.Id)" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Restore Event</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to restore <strong>@event.Title</strong>?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <form method="post" action="@Url.Action("RestoreEvent", "Admin")" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="eventId" value="@event.Id">
                                            <button type="submit" class="btn btn-success">Restore</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>No archived events.</p>
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("Index", "Event")" class="btn btn-secondary">Back to Events</a>
    </div>
</div>
