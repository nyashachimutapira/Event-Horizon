@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <h1 class="mb-4">Admin Dashboard</h1>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h6 class="card-title">Total Users</h6>
                    <h2 class="mb-0">@ViewBag.TotalUsers</h2>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Users")" class="text-white text-decoration-none">View All →</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h6 class="card-title">Active Events</h6>
                    <h2 class="mb-0">@ViewBag.TotalEvents</h2>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Events")" class="text-white text-decoration-none">View All →</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h6 class="card-title">Total RSVPs</h6>
                    <h2 class="mb-0">@ViewBag.TotalRsvps</h2>
                </div>
                <div class="card-footer">
                    <small>Registrations</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h6 class="card-title">Total Reviews</h6>
                    <h2 class="mb-0">@ViewBag.TotalReviews</h2>
                </div>
                <div class="card-footer">
                    <small>Ratings & Feedback</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Events -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Events</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var @event in ViewBag.RecentEvents)
                        {
                            <a href="@Url.Action("Details", "Event", new { id = @event.Id })" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@event.Title</h6>
                                    <small>@event.CreatedAt.ToString("MMM dd")</small>
                                </div>
                                <p class="mb-1 text-muted">@event.CreatedBy?.FirstName @event.CreatedBy?.LastName</p>
                            </a>
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Events")" class="text-decoration-none">View All Events →</a>
                </div>
            </div>
        </div>

        <!-- Recent Users -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Users</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @foreach (var user in ViewBag.RecentUsers)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@user.FirstName @user.LastName</h6>
                                    <small>@user.CreatedAt.ToString("MMM dd")</small>
                                </div>
                                <p class="mb-1 text-muted">@user.Email</p>
                                @if (user.IsAdmin)
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                @if (!user.IsActive)
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Users")" class="text-decoration-none">View All Users →</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Users")" class="btn btn-outline-primary">Manage Users</a>
                        <a href="@Url.Action("Events")" class="btn btn-outline-success">Manage Events</a>
                        <a href="@Url.Action("ArchivedEvents")" class="btn btn-outline-secondary">Archived Events</a>
                        <a href="@Url.Action("Analytics")" class="btn btn-outline-info">Analytics</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
