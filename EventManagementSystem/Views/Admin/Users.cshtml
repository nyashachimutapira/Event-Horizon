@model List<EventManagementSystem.Models.User>

@{
    ViewData["Title"] = "User Management - Admin";
}

<div class="users-container">
    <div class="users-header mb-4">
        <h1><i class="fas fa-users-cog"></i> User Management</h1>
        <p class="text-muted">Manage Event Horizon Zimbabwe community members</p>
    </div>

    <!-- Search Bar -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" action="@Url.Action("Users")" class="form-inline">
                <input type="text" name="search" class="form-control mr-2" placeholder="Search by username, email, name..." value="@ViewBag.Search" />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Search
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.Search))
                {
                    <a href="@Url.Action("Users")" class="btn btn-secondary ml-2">
                        <i class="fas fa-times"></i> Clear
                    </a>
                }
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">
                Users (@Model.Count)
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Role</th>
                            <th>Events Created</th>
                            <th>RSVPs</th>
                            <th>Joined</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            @foreach (var user in Model.OrderByDescending(u => u.CreatedAt))
                            {
                                <tr class="@(!user.IsActive ? "table-danger" : "")">
                                    <td>
                                        <strong>@user.Username</strong>
                                    </td>
                                    <td>@user.FirstName @user.LastName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsAdmin)
                                        {
                                            <span class="badge badge-warning">Admin</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">User</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge badge-info">@(user.CreatedEvents?.Count ?? 0)</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-primary">@(user.Rsvps?.Count ?? 0)</span>
                                    </td>
                                    <td>@user.CreatedAt.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <a href="@Url.Action("UserDetails", new { id = user.Id })" class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <form method="post" action="@Url.Action("ToggleUserStatus", new { id = user.Id })" style="display:inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-warning" : "btn-success")" title="@(user.IsActive ? "Deactivate" : "Activate")">
                                                <i class="fas fa-@(user.IsActive ? "ban" : "check")"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted">
                                    @if (!string.IsNullOrEmpty(ViewBag.Search))
                                    {
                                        <text>No users found matching your search</text>
                                    }
                                    else
                                    {
                                        <text>No users found</text>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Total Users</h5>
                    <h3 class="text-primary">@Model.Count</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Active Users</h5>
                    <h3 class="text-success">@Model.Count(u => u.IsActive)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Admins</h5>
                    <h3 class="text-warning">@Model.Count(u => u.IsAdmin)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5>Inactive Users</h5>
                    <h3 class="text-danger">@Model.Count(u => !u.IsActive)</h3>
                </div>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Dashboard")" class="btn btn-secondary mt-3">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>

<style>
    .users-container {
        padding: 20px;
    }

    .form-inline {
        gap: 10px;
    }

    .form-inline input {
        flex: 1;
        max-width: 400px;
    }

    .btn-sm {
        margin: 0 2px;
    }
</style>
