@{
    ViewData["Title"] = "About Us";
}

<!-- About Hero Section -->
<section class="about-hero">
    <div class="container">
        <h1 class="section-title">About Event Hub</h1>
        <p class="subtitle">Connecting people through shared experiences</p>
    </div>
</section>

<!-- Mission Section -->
<section class="about-section">
    <div class="container">
        <div class="about-content">
            <h2>Our Mission</h2>
            <p>Event Hub is dedicated to making event discovery and management seamless and accessible to everyone. We believe that events bring communities together, create lasting memories, and foster meaningful connections. Our platform empowers event organizers to reach their audiences and helps attendees find experiences that matter to them.</p>
        </div>
    </div>
</section>

<!-- Vision Section -->
<section class="about-section bg-light">
    <div class="container">
        <div class="about-content">
            <h2>Our Vision</h2>
            <p>We envision a world where anyone can easily discover, organize, and participate in events that match their interests and schedules. By leveraging technology, we're breaking down barriers between organizers and attendees, making event planning effortless and event discovery intuitive.</p>
        </div>
    </div>
</section>

<!-- Values Section -->
<section class="about-section">
    <div class="container">
        <h2 class="section-title text-center mb-5">Our Core Values</h2>
        <div class="values-grid">
            <div class="value-card">
                <div class="value-icon">
                    <i class="fas fa-handshake"></i>
                </div>
                <h3>Community</h3>
                <p>Building spaces where people connect and build relationships through shared interests and experiences.</p>
            </div>

            <div class="value-card">
                <div class="value-icon">
                    <i class="fas fa-lightbulb"></i>
                </div>
                <h3>Innovation</h3>
                <p>Continuously improving our platform to make event management and discovery more intuitive and efficient.</p>
            </div>

            <div class="value-card">
                <div class="value-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Trust</h3>
                <p>Protecting user data and ensuring a safe, secure environment for all participants and organizers.</p>
            </div>

            <div class="value-card">
                <div class="value-icon">
                    <i class="fas fa-star"></i>
                </div>
                <h3>Excellence</h3>
                <p>Delivering high-quality experiences through attention to detail and commitment to user satisfaction.</p>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section class="about-section bg-light">
    <div class="container">
        <h2 class="section-title text-center mb-5">Why Choose Event Hub?</h2>
        <div class="features-list">
            <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <div>
                    <h4>Easy Event Discovery</h4>
                    <p>Advanced search and filtering tools help users find events tailored to their interests.</p>
                </div>
            </div>

            <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <div>
                    <h4>Seamless RSVP Management</h4>
                    <p>Attendees can easily register for events and organizers can track attendance in real-time.</p>
                </div>
            </div>

            <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <div>
                    <h4>Community Feedback</h4>
                    <p>Reviews and ratings help build trust and improve event quality over time.</p>
                </div>
            </div>

            <div class="feature-item">
                <i class="fas fa-check-circle"></i>
                <div>
                    <h4>Security & Privacy</h4>
                    <p>Industry-standard security measures protect user data and ensure safe transactions.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Contact CTA -->
<section class="cta-section">
    <div class="container">
        <h2>Get in Touch</h2>
        <p>Have questions or feedback? We'd love to hear from you!</p>
        <a href="mailto:info@eventhub.com" class="btn btn-primary btn-lg">Contact Us</a>
    </div>
</section>

