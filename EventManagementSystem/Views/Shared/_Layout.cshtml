<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event Management System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="nav-wrapper">
                <div class="navbar-brand">
                    <a href="@Url.Action("Index", "Home")">
                        <i class="fas fa-calendar-alt"></i>
                        Event Hub
                    </a>
                </div>

                <button class="hamburger" id="hamburger">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>

                <ul class="nav-menu" id="navMenu">
                    <li><a href="@Url.Action("Index", "Event")" class="nav-link">
                        <i class="fas fa-list"></i> Events
                    </a></li>
                    
                    @if (Context.Session.GetInt32("UserId") != null)
                    {
                        <li><a href="@Url.Action("Create", "Event")" class="nav-link">
                            <i class="fas fa-plus-circle"></i> Create Event
                        </a></li>
                        <li class="dropdown">
                            <a href="#" class="nav-link dropdown-toggle">
                                <i class="fas fa-user-circle"></i> Account
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Profile", "Account")">My Profile</a></li>
                                <li><a href="@Url.Action("MyEvents", "Event")">My Events</a></li>
                                <li><hr></li>
                                <li><a href="@Url.Action("Logout", "Account")">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Login", "Account")" class="nav-link">
                            <i class="fas fa-sign-in-alt"></i> Login
                        </a></li>
                        <li><a href="@Url.Action("Register", "Account")" class="nav-link btn-nav">
                            <i class="fas fa-user-plus"></i> Register
                        </a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>Event Hub</h4>
                    <p>Your premier platform for discovering and managing amazing events.</p>
                </div>
                <div class="footer-section">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="@Url.Action("Index", "Event")">Browse Events</a></li>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="#">About Us</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Follow Us</h4>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-linkedin"></i></a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 Event Hub. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/js/scripts.js"></script>
</body>
</html>
